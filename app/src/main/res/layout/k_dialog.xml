<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/k_screen18">

<LinearLayout   android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/k_dialog_img"
        android:src="@drawable/k_shoppingcart"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="center"
        android:background="#FFFFBB33" />
    <TextView
        android:id="@+id/k_dialog_title"
        android:text="@string/K_Diag_Title"
        android:textAlignment="center"
        android:textSize="@dimen/k_custom_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:textColor="#0000FF" />
</LinearLayout>

    <TextView
        android:id="@+id/k_dialog_text"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/k_dialog_img" />

    <Button
        android:id="@+id/k_dialog_b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" OK "
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/k_dialog_text" />

</LinearLayout>